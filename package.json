{
  "name": "@3nvs/polyfront-scaffold",
  "version": "1.0.12",
  "description": "Scaffold React (Vite or Webpack) and Angular apps with language/UI/store/testing options. Works on Windows/macOS/Linux.",
  "type": "commonjs",
  "license": "MIT",
  "author": "Nirmal Samaranayaka <nirmal.fullstack@gmail.com>",
  "bin": {
    "polyfront-scaffold": "bin/index.js"
  },
  "keywords": [
    "react",
    "vite",
    "webpack",
    "angular",
    "jsx",
    "typescript",
    "javascript",
    "scaffold",
    "boilerplate",
    "mui",
    "bootstrap",
    "tailwind",
    "ant-design",
    "chakra-ui",
    "angular-material",
    "primeng",
    "redux",
    "mobx",
    "react-query",
    "i18n",
    "internationalization",
    "moment",
    "dayjs",
    "date-fns",
    "jest",
    "vitest",
    "cypress",
    "scaffolding",
    "starter",
    "cli",
    "code-generator"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NirmalSamaranayaka/polyfront-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/NirmalSamaranayaka/polyfront-scaffold/issues"
  },
  "homepage": "https://github.com/NirmalSamaranayaka/polyfront-scaffold#readme",
  "engines": {
    "node": ">=20.19"
  },
  "files": [
    "bin/",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "create": "node bin/index.js --interactive",
    "pack:dry": "npm pack --dry-run",
    "test": "node -e \"console.log('ok')\"",
    "clean:sandbox": "node -e \"require('fs').rmSync('sandbox',{recursive:true,force:true})\"",
    "verify:matrix:quick": "cross-env PF_MATRIX=quick node scripts/verify-once.js",
    "verify:matrix:full": "cross-env PF_MATRIX=full node scripts/verify-once.js",
    "verify:matrix:full:ts": "cross-env PF_MATRIX=full PF_LANGS=ts node scripts/verify-once.js",
    "verify:matrix:full:js": "cross-env PF_MATRIX=full PF_LANGS=js node scripts/verify-once.js",
    "verify:watch": "node scripts/watch-verify.js"
  },
  "devDependencies": {
    "@angular/cli": "^20.2.2",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "execa": "^8.0.1",
    "fs-extra": "^11.3.1",
    "jest": "^30.1.3",
    "jsdom": "^26.1.0",
    "kleur": "^4.1.5",
    "ora": "^5.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
